<section id="ca_area_section_menu" class="ca_area_region">
  <input id="ca_select_area_menu" class="ca_area_switcher" value="ca_select_area_menu" name="area" type="radio">
  <nav id="ca_area_menu" class="ca_area_menu ca_area ca_area_list">
    <label for="ca_select_area_menu" class="ca_area_selector" onclick="AreaSwitch( this.getAttribute( 'for') )">
      {% include "static/icons/menu.svg" %}
    </label>
    <div class="ca_fold_content">
      <h3 class="ca_folder ca_folder_inverse" onclick="DOMOpenFolder( this )">chercheurd.art</h3>
      <div class="ca_fold_content_item ca_is_open">
        <div class="ca_fold_1col">
          <ul class="ca_list_items">
          {% set @widetitle = ' ca_wide_title' %}
          {% for item in collections.menu %}
            <li class="ca_flipcard_container">
              <div class="ca_flipcard">
                <a href="{{@SITE_URL + item.data.linkto}}" class="ca_nodeco">
                {% include "partials/_in_legend_.njk" %}
                </a>
              </div>
            </li>
          {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </nav>
</section>