{# @id, @author, @date #}
{% set work = works[ id ] %}
{% set artist = artists[ work.artist ] %}
{% set collector = collectors[ work.collector ] %}

<ul class="ca_post_header">
  <li class="ca_post_title">{{ artist.forename }} {{ artist.name }}{% if artist.nickname %}, {{ artist.nickname }}{% endif %}</li>
  <li class="ca_post_signature">{{ @date }}</li>
  <li class="ca_post_subtitle">{{ work.subject }}</li>
  <li class="ca_post_signature">{{ @author }}</li>
  <li class="ca_post_subtitle">{{ collector.location }} - {{ collector.place }}, {{ collector.country }}</li>
 </ul>
